{{> header}}

    <!-- Details -->
    <div class="container details">
        <div class="details-content">
            <h2>{{ article.title }}</h2>
            <strong>{{ article.category }}</strong>
            <p>{{ article.content }}</p>
            <div class="buttons">
                {{#if canDelete}}
                <a href="#/article/close/{{ article.id }}" class="btn delete">Delete</a>
                <a href="#/article/edit/{{ article.id }}" class="btn edit">Edit</a>
                {{else}}
                <a href="#/home" class="btn edit">Back</a>
                {{/if}}

            </div>
        </div>
    </div>

{{> footer}}